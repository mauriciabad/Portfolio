---
interface Props {
  title: string
  icon: string
  url: string
}

const { url, title, icon } = Astro.props
---

<li class="group">
  <a href={url} class="flex flex-col items-center justify-center gap-4 p-4">
    <img
      src={icon}
      alt=""
      class="block h-24 w-24 rounded-full border border-stone-400 shadow-lg transition-transform duration-100 group-hover:scale-110"
    />
    <span class="text-lg font-bold">{title}</span>
  </a>
</li>
