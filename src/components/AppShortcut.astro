---
import { IconExternalLink } from "@tabler/icons-react"

interface Props {
  title: string
  icon?: string | undefined
  url: string
}

const { url, title, icon } = Astro.props
---

<li>
  <a
    href={url}
    class="bg-semi-gray-800 hover:bg-semi-gray-700 group relative flex h-full flex-col items-center justify-center gap-2 rounded-xl p-3 shadow-gray-100 transition-colors duration-300 hover:shadow-xl hover:duration-0 xs:p-4"
  >
    <IconExternalLink
      className="absolute right-3 top-3 text-gray-600 duration-300 group-hover:text-gray-300 group-hover:duration-0"
    />
    {
      icon ? (
        <img
          src={icon}
          alt=""
          class="z-0 block aspect-square w-16 rounded-full border border-gray-900 group-hover:border-gray-800 xs:w-20"
        />
      ) : (
        <div class="z-0 block aspect-square w-16 rounded-full border border-gray-900 bg-white group-hover:border-gray-800 xs:w-20" />
      )
    }
    <div class="flex grow flex-col items-center justify-center text-center">
      <span class="text-base leading-tight tracking-wider xs:text-lg"
        >{title}</span
      >
    </div>
  </a>
</li>
