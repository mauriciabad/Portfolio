---
import SmallFish from "./SmallFish.astro"
---

<div class="wrapper">
  <div class="small-fish">
    <div>
      <SmallFish />
    </div>
  </div>
</div>

<style>
  .wrapper {
    position: absolute;
    inset: 0;
  }
  .small-fish {
    transform-origin: 90% 50%;
    animation: small-fish-translate 10s linear infinite;
    position: absolute;
    top: 0.25em;
    left: calc(50vw - 100px - 1.25em);
    font-size: 0.8rem;
    transform-style: flat;
    perspective: 1000px;
    perspective-origin: 50vh 0;
  }

  .small-fish > * {
    animation: small-fish-rotate 10s linear infinite;
    height: 1em;
  }

  @media (min-width: 640px) {
    .small-fish {
      top: 1.5em;
      font-size: 1rem;
    }
  }
  @media (min-width: 768px) {
    .small-fish {
      top: 2.5em;
    }
  }

  @keyframes small-fish-translate {
    0% {
      transform: translateX(0);
    }

    50% {
      transform: translateX(200px);
    }
    100% {
      transform: translateX(0);
    }
  }

  @keyframes small-fish-rotate {
    0% {
      transform: rotateY(-90deg);
    }
    5%,
    45% {
      transform: rotateY(0deg);
    }
    55%,
    95% {
      transform: rotateY(180deg);
    }
    100% {
      transform: rotateY(270deg);
    }
  }
</style>
