---
import SmallFish from "./SmallFish.astro"
---

<div class="wrapper">
  <div class="small-fish">
    <div>
      <SmallFish />
    </div>
  </div>
</div>

<style>
  .wrapper {
    position: absolute;
    inset: 0;
  }
</style>

<style>
  .small-fish {
    position: absolute;
    top: 0.25em;
    left: calc(50vw - 1.25em);
    font-size: 0.8rem;
    transform-style: flat;
    perspective: 1000px;
    perspective-origin: 50vh 0;
  }

  .small-fish > * {
    animation: small-fish-rotate 10s cubic-bezier(0.53, 0.37, 0.44, 0.6)
      infinite;
    height: 1em;
  }

  @media (min-width: 640px) {
    .small-fish {
      top: 1.5em;
      font-size: 1rem;
    }
  }
  @media (min-width: 768px) {
    .small-fish {
      top: 2.5em;
    }
  }

  @keyframes small-fish-rotate {
    0% {
      transform: rotateY(0deg) translateZ(6rem);
    }
    50% {
      transform: rotateY(180deg) translateZ(6rem);
    }
    100% {
      transform: rotateY(360deg) translateZ(6rem);
    }
  }
</style>
