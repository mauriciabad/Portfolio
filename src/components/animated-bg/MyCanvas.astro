---
import SmallFish from "./SmallFish.astro"
---

<div class="wrapper">
  <div class="small-fish">
    <SmallFish />
  </div>
</div>

<style is:inline>
  .wrapper {
    position: absolute;
    inset: 0;
  }
  .small-fish {
    transform-origin: 90% 50%;
    animation: small-fish-translate 10s linear infinite;
    position: absolute;
    top: 0.25rem;
    left: calc(50vw - 100px - 1.25rem);
  }

  @media (min-width: 640px) {
    .small-fish {
      top: 1.5rem;
    }
  }
  @media (min-width: 768px) {
    .small-fish {
      top: 2.5rem;
    }
  }

  .small-fish > * {
    animation: small-fish-rotate 10s linear infinite;
  }

  @keyframes small-fish-translate {
    0% {
      transform: translateX(0);
    }

    50% {
      transform: translateX(200px);
    }
    100% {
      transform: translateX(0);
    }
  }

  @keyframes small-fish-rotate {
    0% {
      transform: rotateY(-90deg);
    }
    5%,
    45% {
      transform: rotateY(0deg);
    }
    55%,
    95% {
      transform: rotateY(180deg);
    }
    100% {
      transform: rotateY(270deg);
    }
  }
</style>
