---
import AboutMeSection from "../components/sections/AboutMeSection.astro"
import QuickAccessSection from "../components/sections/QuickAccessSection.astro"
import DivMaxWidth from "../layouts/DivMaxWidth.astro"
import Layout from "../layouts/Layout.astro"
import { getCollection } from "astro:content"

const mainProjects = await getCollection("projects", ({ data }) => {
  return data.addShortcut === true
})
---

<Layout
  title="Portfolio | Maurici Abad Gutierrez | Web developer & UI/UX designer"
>
  <main class="p-4 pb-24">
    <DivMaxWidth>
      <section class="mt-1 sm:mt-8 md:mt-12">
        <QuickAccessSection projects={mainProjects} />
      </section>

      <section class="mt-8 sm:mt-16 md:mt-20 lg:mt-24">
        <AboutMeSection />
      </section>
    </DivMaxWidth>
  </main>
</Layout>
